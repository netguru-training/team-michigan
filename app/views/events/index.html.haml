%h1 Index
-if current_user.has_role? :teacher
  = link_to 'New Event', new_event_path, class: "btn btn-success"
%table.table.table-condensed
  %thead
    %tr
      %th= 'Event'
      %th= 'Place'
      %th= 'Date'
      %th= 'Deadline'
      %th= 'Slots'
  %tbody
    - events.each do |event|
      %tr
        %td= link_to event.name, event
        %td= event.place
        %td= event.start_time
        %td= event.user_deadline
        %td= event.slots
